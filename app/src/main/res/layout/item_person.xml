<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="2dp"

            android:scaleType="fitXY"
            app:srcCompat="@drawable/no_profile" />

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/user_pic"
            android:text="TextView"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:text="Username12" />

        <TextView
            android:id="@+id/user_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_nickname"
            android:layout_marginTop="38dp"
            android:text="TextView"
            tools:text="Posnapuje jakaÅ› zb loszka?" />

        <TextView
            android:id="@+id/user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_nickname"
            android:layout_marginTop="58dp"
            android:textColor="@color/grey_400"
            android:textSize="12dp"
            android:text="TextView"
            tools:text="Wynik: 0" />

        <ImageView
            android:id="@+id/new_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/new_msg2"
            android:visibility="invisible"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>